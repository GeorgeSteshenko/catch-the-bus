// Import all partials
@require './_*.styl'

html
body
    width 100%
    height 100%

body
    background-color white

#main
    width 100%
    height 100%
    > *
        height 100%

.map-wrapper
    width calc(100% - 320px)
    height 100%
    float left
    background-color white
    .map-container
        width 100%
        height 100%

.places-container
    width 320px
    height 100%
    float right
    padding 20px
    overflow auto
    ul
        list-style none
        padding 0
        margin 0
        li
            padding 10px 0 10px 30px
            border-top 1px dotted rgba(grey, .5)
            &:first-child
                border none
                padding-top 0
            span
                display inline-block
                width 25px
                font-size 1.4rem
                color grey
                text-align right
                margin-left -30px
            small
                display block
                color darkgrey

.search-box
    top 20px
    left 20px
    width 320px
    height 30px
